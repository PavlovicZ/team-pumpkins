<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/managers_office" android:layout_gravity="center" android:id="@+id/floor2"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Elevator"
        android:id="@+id/elevator_button"
        android:translationY="50dp"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/grab_key" android:src="@drawable/ic_launcher_background" android:translationY="250dp" android:translationX="550dp" android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/chest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="100dp"
        android:translationY="100dp"
        android:visibility="invisible"
        android:src="@drawable/ic_launcher_foreground"/>

</FrameLayout>